<%= render 'users/userinfo', user: @user %>

<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
<%= @users.each do |user| %>
  <tbody>
    <tr>
      <td>
        <%= image_tag user.get_profile_image(100,100) %>
      </td>
      <td>
        <%= user.name %>
      </td>
      <td>
        <%= link_to "show", user_path(user.id) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>